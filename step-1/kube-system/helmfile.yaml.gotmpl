environments:
  default:
    values:
      - kubeContext: minikube
---
repositories:
  - name: metrics-server
    url: https://kubernetes-sigs.github.io/metrics-server/
templates:
  default: &default
    kubeContext: '{{ .Values.kubeContext }}'
    namespace: kube-system
    values:
      - ./{{`{{ .Release.Name }}`}}/values.yaml.gotmpl
releases:
  - chart: metrics-server/metrics-server
    name: metrics-server
    version: 3.12.2
    <<: *default
