environments:
  default:
    values:
      - kubeContext: minikube
---
templates:
  default: &default
    kubeContext: '{{ .Values.kubeContext}}'
    namespace: nginx
    values:
      - ./{{`{{ .Release.Name }}`}}/values.yaml.gotmpl
repositories:
  - name: ingress-nginx
    url: https://kubernetes.github.io/ingress-nginx
releases:
  - chart: ingress-nginx/ingress-nginx
    name: ingress-nginx
    version: 4.12.1
    <<: *default
