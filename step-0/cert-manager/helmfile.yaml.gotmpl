repositories:
  - name: jetstack
    url: https://charts.jetstack.io
  - name: adfinis
    url: https://charts.adfinis.com
  - name: bedag
    url: https://bedag.github.io/helm-charts
templates:
  default-release: &default-release
    namespace: cert-manager
environments:
  default:
    values:
      - kubeContext: minikube
        releases:
          cert-manager:
            version: 1.16.1
            <<: *default-release
          cert-manager-raw:
            version: ''
            <<: *default-release
          cert-manager-issuers:
            version: 0.3.0
            <<: *default-release
---
templates:
  default: &default
    kubeContext: '{{ .Values.kubeContext}}'
    version: '{{`{{ .Values | get "releases" | get .Release.Name | get "version" }}`}}'
    namespace: '{{`{{ .Values | get "releases" | get .Release.Name | get "namespace" }}`}}'
    values:
      - ./{{`{{ .Release.Name }}`}}/values.yaml.gotmpl
releases:
  - chart: jetstack/cert-manager
    name: cert-manager
    <<: *default
  - chart: bedag/raw
    name: cert-manager-raw
    <<: *default
    needs: 
      - cert-manager
  - chart: adfinis/cert-manager-issuers
    name: cert-manager-issuers
    <<: *default
    needs: 
      - cert-manager
      - cert-manager-raw
